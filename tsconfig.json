{
  "files": [],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "./tsconfig.vite.json" }
  ],
  "compilerOptions": {
    "checkJs": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./app/*"],
      "@/prisma/*": ["./prisma/*"],
      "@/shared/*": ["./app/shared/*"],
      "@/ui/*": ["./app/shared/components/ui/*"],
      "@/components/*": ["./app/shared/components/*"],
      "@/lib/*": ["./app/shared/lib/*"],
      "@/utils/*": ["./app/shared/lib/utils/*"],
      "@/hooks/*": ["./app/shared/hooks/*"],
      "@/infrastructure/*": ["./app/infrastructure/*"],
      "@/domain/*": ["./app/domain/*"],
      "@/entities/*": ["./app/domain/entities/*"],
      "@repositories/*": ["./app/domain/repositories/*"],
      "@/dtos/*": ["./app/domain/dtos/*"],
      "@/presentation/*": ["./app/presentation/*"]
    }
  }
}
